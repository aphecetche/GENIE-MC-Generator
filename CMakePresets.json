{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "dev",
            "displayName": "Developper Config",
            "description": "Developper build using Ninja generator",
            "generator": "Ninja",
            "binaryDir": "build-dev",
            "installDir": "install-dev",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CMAKE_BUILD_TYPE": {
                    "type": "string",
                    "value": "RelWithDebInfo"
                },
                "GENIE_GENERATOR_ENABLE_TESTING": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "dev",
            "configurePreset": "dev",
            "jobs": 4
        }
    ],
    "testPresets": [
        {
            "name": "dev",
            "configurePreset": "dev",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        }
    ],
    "workflowPresets": [
        {
            "name": "dev",
            "steps": [
                {
                    "type": "configure",
                    "name": "dev"
                },
                {
                    "type": "build",
                    "name": "dev"
                },
                {
                    "type": "test",
                    "name": "dev"
                }
            ]
        }
    ]
}
